<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dialog_preview"
        android:layout_width="250dip"
        android:layout_height="370dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="35dip"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="分享到"
            android:textColor="@color/uikit_text_sub_content"
            android:textSize="14dip" />

        <View style="@style/UikitDivider.Horizontal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:paddingBottom="20dip" />

        <TextView
            android:id="@+id/tv_dialog_home"
            style="@style/UikitHMButton"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:textColor="@color/uikit_text_sub_content"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/socialshare_dialog_bottom_back_home_btn"
            android:gravity="center"
            android:text="邀请完，点此退回【首页】"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>

